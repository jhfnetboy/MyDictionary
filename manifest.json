{
  "manifest_version": 3,
  "name": "MyDictionary",
  "version": "0.1.7",
  "description": "Smart local AI dictionary - Translation, Synonyms, Examples, Academic Writing, TTS | 智能本地 AI 词典 - 翻译·近义词·例句·学术写作·语音朗读",
  "author": "Jason",
  "homepage_url": "https://github.com/jhfnetboy/MyDictionary",

  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },

  "action": {
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    },
    "default_title": "MyDictionary - Smart Dictionary",
    "default_popup": "src/ui/popup.html"
  },

  "options_ui": {
    "page": "src/settings/settings.html",
    "open_in_tab": true
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["src/ui/sidebar.css"],
      "run_at": "document_idle"
    }
  ],

  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting",
    "notifications",
    "system.memory",
    "offscreen"
  ],

  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Toggle MyDictionary Sidebar"
    }
  },

  "web_accessible_resources": [
    {
      "resources": [
        "src/ui/*.html",
        "src/ui/*.css",
        "src/ui/*.js",
        "src/config/*.json",
        "src/lib/*.js",
        "src/offscreen/*.html",
        "src/offscreen/*.js",
        "assets/*.png",
        "assets/icons/*.png",
        "transformers/dist/*.wasm",
        "transformers/dist/*.js",
        "transformers/dist/*.map",
        "transformers/src/*.js",
        "transformers/*.json",
        "synonyms.json.gz",
        "academic-phrasebank.json",
        "data/dictionary/*.json",
        "data/dictionary/*.gz"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
